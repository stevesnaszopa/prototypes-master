      <div class="col third2">
        <p class="intro"><b style="font-weight:bold; color:#00913c;">£6,336.52</b> earnings<br />
          <span class="hint">Incl. bonuses, after fees and bad debt not covered by Safeguard</p>

        <p class="intro"><b style="font-weight:bold;  color:#a04040;">£20.53</b> Bad debt not covered by Safeguard</p>

        <p class="intro"> <b style="font-weight:bold; color:#00913c;">£29,000.00</b> deposits</p>

        <p class="intro"><b style="font-weight:bold; color:#a04040;">£503.65</b> withdrawals</p>
      </div>

      <div class="col third1 info box">
        <h2>Tell your friends</h2>
        <p>Earn money by telling your friends about Zopa</p>
        <p><a href="/404" class="button minor">Tell a friend</a></p>
      </div>
    </div>

  </div>
</div>




<% content_for :scripts do %>
  <%= javascript_include_tag "vendor/highcharts" %>
  <script>
    $(function () {
      Highcharts.theme = {
        colors: ['#CFE8CC', '#50B432', '#ED561B', '#DDDF00', '#24CBE5', '#64E572', '#FF9655', '#FFF263', '#6AF9C4'],
      };
      // Apply the theme
      var highchartsOptions = Highcharts.setOptions(Highcharts.theme);
    });

    $(function () {
        $('#bars').highcharts({
            chart: {
                type: 'column'
            },
            title: {
                text: ''
            },
            xAxis: {
                type: 'category',
                labels: {
                    rotation: -45
                }
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Pounds (£)'
                }
            },
            legend: {
                enabled: false
            },
            tooltip: {
                pointFormat: '<b style="color:#00913c;">£{point.y:.2f}</b>'
            },
            series: [{
                name: 'Value',
                data: [
                    ['January 2015', 102.11],
                    ['Febuary 2015', 112.73],
                    ['March 2015', 138.10],
                    ['April 2015', 125.99],
                    ['May 2015', 122.30],
                    ['June 2015', 118.48],
                    ['July 2015', 148.19],
                    ['August 2015', 151.36]
                  ]
            }]
        });
    });
  </script>
<% end %>



<% content_for :styles do %>
  <style>
    @media screen {
      #bars rect.highcharts-background {
        fill: whitesmoke;
      }

      th {
        vertical-align: bottom;"
      }
      table.rows td {
          padding: .75em;
      }
      #lending-account-details table.alt.rows {
        border: 0 !important;
        border-width: 0 !important;
      }
      #lending-account-details table.alt.rows .highlight {
        background-color: #fff;
        font-size: 1.2em;
      }
      #lending-account-details table {
        width: 100%;
      }
      #lending-account-details table .show-more {
        display: block;
      }
      #lending-account-details table .number {
        font-weight: 600;
        width: 120px; /* so that show/hiding the table underneath doesn't make everything jump */
      }
      #lending-account-details table td.number  {
        font-size:25px;
        font-weight:bold;
        letter-spacing:-1px;
        color:#00913c;
        padding:10px;
      }
      #lending-account-details table table .number {
        width: auto;
      }
      #lending-account-details table .hint {
        display: block;
      }
      #lending-account-details table .hint {
        color: #444034;
      }

      #queue-details table,
      #recent-lending-details table {
        background-color: whitesmoke;
      }
      #queue-details .position p,
      #recent-lending-details .position p {
        font-size: .85em;
        margin-bottom: .2em;
      }
    }


    @media only screen and (max-width: 601px) {
      #lending-account-details table .button-row span {
        display: none;
      }

      #lending-account-details table td {
        display: block;
        border-width: 0;
        padding: 0 .5em .5em;
      }
      #lending-account-details table td:last-child {
        border-bottom-width: 1px;
      }
      #lending-account-details table td:first-child {
        padding-top: .5em;
      }
      #lending-account-details table td.number,
      #lending-account-details table td.more {
        text-align: left;
      }
      #lending-account-details table td.number {
        padding-bottom: .2em;
      }
    }
  </style>
<% end %>
