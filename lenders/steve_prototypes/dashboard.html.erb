<% @loggedin = true %>
<% @audience = :lenders %>
<% @pagetitle = 'My Zopa lending dashboard' %>

<% content_for :subnav do %>
 <ul>
   <li class="active"><a href="dashboard.html">Summary</a></li>
   <li><a href="statements.html">Manage lending</a></li>
   <li><a href="lend.html">Statements</a></li>
